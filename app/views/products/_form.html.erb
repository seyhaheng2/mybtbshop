<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>
      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


           <div class="row">
              <div class="col-md-6 col-sm-6">
                     <%= f.label :title %>
                     <%= f.text_field :title, placeholder: "Name of your AD" %>
              </div>
              <div class="col-md-6 col-sm-6">
                <label>File Photos</label>
                <div class="upload-box">
                  <div class="hold">
                   <%= link_to "Maximum file size 2 MB" %> 
                    <span class="btn-file"> Browse File
                      <%= f.file_field :photo %>
                    </span> 
                  </div>
                </div>
              </div>
                <div class="col-md-6 col-sm-6">
                    <%= f.label :price %>
                    <%= f.text_field :price, placeholder: "Your price of AD" %>
              </div>

              <div class="col-md-6 col-sm-6">
                    <%= f.label :description %>
                    <%= f.text_area :description, placeholder: "Complete your detail of AD" %>
              </div>
              <div class="col-md-6 col-sm-6">
                    <%= f.label :kind %>
                    <%= f.select :kind, %w{ Buy Sale Other } %>
              </div>  
              <div class="col-md-6 col-sm-6">
                    <%= f.label :brand_id %>
                    <%= f.select :brand_id, Brand.all.map {|a| [a.name, a.id]} %>
              </div>
       
              <div class="col-md-6 col-sm-6">
                    <%= f.label :subcategory_id %>
                    <%= f.select :subcategory_id, Subcategory.all.map {|a| [a.name, a.id]} %>
              </div>
                <div class="col-md-6 col-sm-6">
                    <%= f.label :category_id %>
                    <%= f.select :category_id, Category.all.map {|a| [a.name, a.id]} %>
              </div>
           </div>
           <div class="col-md-12">
              <div class="btn-col">
                <%= f.submit "CREATE AD FREE"%>
              </div>
            </div>



<% end %>