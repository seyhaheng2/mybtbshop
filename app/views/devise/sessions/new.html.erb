<section id="inner-banner">
   <div class="container">
      <h1>Login To Khlorktinh Account</h1>
   </div>
</section>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div id="main">
   <section class="signup-section">
      <div class="container">
         <div class="holder">
            <div class="thumb">
               <%= image_tag "signup.png" %>
            </div>
            <form action="#">
               <div class="input-box"> <i class="fa fa-user"></i>
                  <%= f.email_field :email, autofocus: true, placeholder: "Email" %>
               </div>
               <div class="input-box"> <i class="fa fa-unlock"></i>
                  <%= f.password_field :password, autocomplete: "off", placeholder: "Password" %>
               </div>
               <div class="check-box">
                  <% if devise_mapping.rememberable? -%>
                  <%= f.check_box :remember_me %>
                  <strong><%= f.label :remember_me %></strong> 
                  <% end -%>
               </div>
               <%= f.submit "Log in" %>
               <!-- <a href="#" class="login">Forgot your Password</a>  -->
               <b>OR</b>
               <div class="login-social">
                  <h4>Log in with Your Social Account</h4>
                  <ul>
                     <li> <a href="#" class="fb"><i class="fa fa-facebook"></i>Facebook Login</a> </li>
                     <!-- <li> <a href="#" class="gp"><i class="fa fa-google-plus"></i>Google Plus Login</a> </li> -->
                     <!-- <li> <a href="#" class="tw"><i class="fa fa-twitter"></i>Twitter Login</a> </li> -->
                  </ul>
                  <em>
                    You Donâ€™t have an Account? 
                    <%= link_to "SIGN UP NOW", new_user_registration_path %>
                  </em> 
               </div>
            </form>
         </div>
      </div>
   </section>
</div>
<% end %>
